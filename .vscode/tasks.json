{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gstreamer build active file",
            "command": "/usr/bin/make",
            "args": [],
            "options": {
              "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
              "kind": "build",
              "isDefault": false,
            }
        },
        {
            "type": "shell",
            "label": "DEBUG gstreamer build active file",
            "command": "/usr/bin/make",
            "args": ["debug=true"],
            "options": {
              "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
              "kind": "build",
              "isDefault": false,
            }
        },
        {
            "label": "build rust explore",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/rust/explore"
            },
            "problemMatcher": []
        },
        {
            "label": "run rust explore",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run"
            ],
            "group": {
                "kind": "build",
                "isDefault": false,
            },
            "options": {
                "cwd": "${workspaceFolder}/rust/explore"
            },
            "problemMatcher": []
        }
    ]
}